<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightgrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/colorPrimary" >
                        
                        
                    </ImageView>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="23dp"
                        android:clickable="true"
                        android:fontFamily="casual"
                        android:text="Most Common type"
                        android:textColor="?android:attr/colorBackgroundFloating"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="232dp"
                        android:layout_height="53dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="82dp"
                        android:clickable="true"
                        android:fontFamily="casual"
                        android:text="of skin Cancer"
                        android:textColor="?android:attr/colorBackgroundFloating"
                        android:textSize="29sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="53dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_toEndOf="@+id/textView6"
                        android:rotation="90"
                         android:layout_marginLeft="290dp"
                        android:layout_marginTop="100dp"
                        app:srcCompat="@drawable/ic_forward_black_24dp">

                    </ImageView>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:id="@+id/cardMelanoma"
                android:layout_height="180dp"
                android:layout_margin="10dp"
               android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageMelanoma"
                        android:layout_width="match_parent"
                        android:layout_height="163dp"

                        android:background="@drawable/melanoma"
                        android:transitionName="example_transition" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Melanoma"
                        android:textStyle="bold" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardBasal"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageBasal"
                        android:layout_width="match_parent"
                        android:layout_height="163dp"

                        android:background="@drawable/basalcell"
                        android:transitionName="abc" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Basal Cell"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView

                    android:layout_width="340dp"
                    android:id="@+id/cardSquamous"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/imageSquamous"
                            android:layout_height="281dp"
                            android:background="@drawable/squamouscell"
                            android:padding="10dp"
                            android:transitionName="pqr"

                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Squamous Cell"
                            android:textStyle="bold" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView

                    android:layout_width="340dp"
                    android:id="@+id/cardMerkel"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageMerkel"
                            android:layout_width="match_parent"
                            android:layout_height="281dp"
                            android:background="@drawable/merklecell"
                            android:padding="10dp"
                            android:transitionName="cda"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merkel Cell"
                            android:textStyle="bold" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="5dp"
        android:layout_margin="16dp"
        app:fabSize="normal"
        android:background="#30ddba"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:elevation="6dp"/>

</android.support.design.widget.CoordinatorLayout>